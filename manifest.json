{
  "manifest_version": 2,
  "name": "My Headers",
  "version": "0.1",

  "description": "Add or modify HTTP request headers.",

  "icons": {
    "48": "icons/world-48.png"
  },

  "permissions": [
    "<all_urls>", "webRequest", "webRequestBlocking", "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "popup/images/world-16.png",
      "32": "popup/images/world-32.png",
      "64": "popup/images/world-64.png"
    },
    "default_title": "My Headers",
    "default_popup": "popup/mod-headers.html"
  }
}
